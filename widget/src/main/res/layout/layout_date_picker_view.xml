<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <me.ibore.widget.picker.YearWheelView
        android:id="@+id/wv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/date_picker_view_margins"
        android:layout_marginStart="@dimen/date_picker_view_margins" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/date_picker_view_margins"
        android:layout_marginLeft="@dimen/date_picker_view_margins"
        android:layout_marginRight="@dimen/date_picker_view_margins"
        android:layout_marginStart="@dimen/date_picker_view_margins"
        android:text="@string/date_picker_view_year"
        tools:textSize="20sp"
        android:id="@+id/tv_year"/>

    <me.ibore.widget.picker.MonthWheelView
        android:id="@+id/wv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/date_picker_view_margins"
        android:layout_marginLeft="@dimen/date_picker_view_margins"
        android:layout_marginRight="@dimen/date_picker_view_margins"
        android:layout_marginStart="@dimen/date_picker_view_margins"
        android:text="@string/date_picker_view_month"
        tools:textSize="20sp"
        android:id="@+id/tv_month"/>

    <me.ibore.widget.picker.DayWheelView
        android:id="@+id/wv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/date_picker_view_margins"
        android:layout_marginEnd="@dimen/date_picker_view_margins"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/date_picker_view_margins"
        android:layout_marginRight="@dimen/date_picker_view_margins"
        android:text="@string/date_picker_view_day"
        tools:textSize="20sp"
        android:id="@+id/tv_day"/>
</merge>
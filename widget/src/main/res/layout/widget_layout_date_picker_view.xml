<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <me.ibore.widget.picker.YearWheelView
        android:id="@+id/wv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/widget_date_picker_view_margins"
        android:layout_marginLeft="@dimen/widget_date_picker_view_margins" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/widget_date_picker_view_margins"
        android:layout_marginLeft="@dimen/widget_date_picker_view_margins"
        android:layout_marginEnd="@dimen/widget_date_picker_view_margins"
        android:layout_marginRight="@dimen/widget_date_picker_view_margins"
        android:text="@string/widget_date_picker_view_year"
        tools:textSize="20sp" />

    <me.ibore.widget.picker.MonthWheelView
        android:id="@+id/wv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/widget_date_picker_view_margins"
        android:layout_marginLeft="@dimen/widget_date_picker_view_margins"
        android:layout_marginEnd="@dimen/widget_date_picker_view_margins"
        android:layout_marginRight="@dimen/widget_date_picker_view_margins"
        android:text="@string/widget_date_picker_view_month"
        tools:textSize="20sp" />

    <me.ibore.widget.picker.DayWheelView
        android:id="@+id/wv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/widget_date_picker_view_margins"
        android:layout_marginRight="@dimen/widget_date_picker_view_margins" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/widget_date_picker_view_margins"
        android:layout_marginRight="@dimen/widget_date_picker_view_margins"
        android:text="@string/widget_date_picker_view_day"
        tools:textSize="20sp" />
</LinearLayout>